@model List<E_commerce.Models.Category>

@{
    ViewData["Title"] = "GetAllCategory";
}
<partial name="_slider"></partial>

<div class="popular-items pt-50">
            <div class="container-fluid">
                <div class="row">
                    @foreach (var category in Model)

            {
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-popular-items mb-50 text-center wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
                        <div class="popular-img">
                            <img src="/img/gallery/@category.imageURL" alt=""> 
                            <div class="img-cap">
                                <span>@category.Name</span>
                            </div>
                            <div class="favorit-items">
                                <form asp-action="GetProductsByCategoryId" asp-controller="Product">
                                    <input type="hidden" name="categoryId" value="@category.Id" />
                                    <button type="submit" class="btn">Shop Now</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
     }
 </div>
</div>
</div>
