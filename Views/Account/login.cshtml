@model E_commerce.viewModels.loginVm

@{
    ViewData["Title"] = "login";
}


<link rel="stylesheet" href="/FormRegisterLogin/fonts/material-icon/css/material-design-iconic-font.min.css">
<link rel="stylesheet" href="/FormRegisterLogin/css/style.css">

<section class="sign-in mb-145 mt-80">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="/FormRegisterLogin/images/about1.png" class="mt-105" alt="sing up image"></figure>
                <a href="" class="signup-image-link">Create an account</a>
            </div>

            <div class="signin-form">
                <h2 class="form-title">Sign in</h2>
                <form method="POST" class="register-form" id="login-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="userName" class="control-label"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="userName" placeholder="UserName" />
                        <span asp-validation-for="userName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="control-label"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="password" placeholder="Passward" />
                        <span asp-validation-for="password" placeholder="Password"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger btn-block"><i class="fas fa-sign-in-alt"></i> Login</button>
                    </div>
                </form>
                <div class="social-login">
                    <span class="social-label">Or login with</span>
                    <ul class="socials">
                        <li><a href=""><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                        <li><a href=""><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
