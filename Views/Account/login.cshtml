@model loginVm

@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="/FormRegisterLogin/fonts/material-icon/css/material-design-iconic-font.min.css">
<link rel="stylesheet" href="/FormRegisterLogin/css/style.css">

<section class="sign-in mb-145 mt-80">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="/FormRegisterLogin/images/about1.png" class="mt-105" alt="sing up image"></figure>
                <a href="" class="signup-image-link">Create an account</a>
            </div>

            <div class="signin-form">
                <h2 class="form-title">Sign in</h2>
                <form method="POST" class="register-form" id="login-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="userName" class="control-label"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="userName" placeholder="UserName" />
                        <span asp-validation-for="userName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="control-label"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="password" placeholder="Passward" />
                        <span asp-validation-for="password" placeholder="Password"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger btn-block"><i class="fas fa-sign-in-alt"></i> Login</button>
                    </div>
                </form>
                <div class="social-login">
                    <span class="social-label">Or login with</span>
                    <ul class="socials">
                        <li><a href=""><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                        <li><a href=""><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
=======
<style>
    .custom-radius {
        border-radius: 5%;
    }

    .btn-custom {
        border-radius: 5%;
        width:60%;
        
   
    }

    .form-control {
        font-size: 1.5rem; 
    }
</style>

<h1 class="text-center">Login</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3 custom-radius">
                <label asp-for="userName" class="form-label">Username</label>
                <input asp-for="userName" class="form-control" style="height: 50px;" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>

            <div class="mb-3 custom-radius">
                <label asp-for="password" class="form-label">Password</label>
                <input asp-for="password" type="password" class="form-control" style="height: 50px;" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input class="form-check-input" asp-for="RememberMe" />
                <label class="form-check-label" for="RememberMe">Remember Me</label>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-danger btn-block btn-custom"><i class="fas fa-sign-in-alt"></i> Login</button>
            </div>
        </form>
        <hr />
        <div class="text-center">
            <p>Or login with:</p>
            <a href="#" class="btn btn-danger btn-block btn-custom"><i class="fab fa-google"></i> Login with Google</a>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
